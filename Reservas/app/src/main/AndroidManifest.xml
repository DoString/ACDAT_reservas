<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reservas.acdat.reservas" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Reservas"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".actividades.MisReservasActivity"
            android:label="@string/title_activity_mis_reservas"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".actividades.AddReservaActivity"
            android:label="@string/title_activity_add_reserva"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".actividades.LibresActivity"
            android:label="@string/title_activity_libres"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".actividades.AdminActivity"
            android:label="@string/title_activity_admin"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
